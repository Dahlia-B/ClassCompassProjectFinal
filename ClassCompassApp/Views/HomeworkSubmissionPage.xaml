<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassCompassApp.Views.HomeworkSubmissionPage"
             Title="Submit Homework">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Upload Your Homework" FontSize="24" HorizontalOptions="Center" />

        <!-- Homework ID entry -->
        <Entry x:Name="HomeworkIdEntry" 
               Placeholder="Enter Homework ID" 
               Keyboard="Numeric"
               AutomationId="HomeworkIdEntry" />

        <!-- Button to choose file -->
        <Button Text="Choose File" Clicked="OnChooseFileClicked" />

        <!-- Submit button -->
        <Button Text="Submit Homework" 
                Clicked="OnSubmitClicked" 
                BackgroundColor="LightBlue" />
    </StackLayout>
</ContentPage>
